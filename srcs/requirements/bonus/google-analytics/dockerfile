# # Download and install the Google Analytics plugin
# RUN curl -L -o /tmp/google-analytics.zip \
#     https://downloads.wordpress.org/plugin/google-analytics-for-wordpress.latest-stable.zip \
#     && unzip /tmp/google-analytics.zip -d /var/www/html/wp-content/plugins/ \
