#  CMD ["php-fpm7.3", "-F"]
FROM debian:buster

RUN apt-get update && apt-get install -y curl

# Download and install Node.js (required for Google Analytics)
RUN curl -sL https://deb.nodesource.com/setup_14.x | bash - && apt-get install -y nodejs

# Install the Google Analytics module
RUN npm install -g @google-analytics/tracking-code

# Set the working directory
WORKDIR /app

# Copy your application files (if any) to the container
COPY . /app

# Start the Google Analytics process (replace the command with the appropriate one for Google Analytics)
CMD ["node", "app.js"]

