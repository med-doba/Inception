FROM debian:buster

# Install necessary dependencies
RUN apt-get update && apt-get install -y curl

# Download and install cAdvisor
RUN curl -LO https://github.com/google/cadvisor/releases/latest/download/cadvisor \
    && chmod +x cadvisor

# Expose the default cAdvisor port
EXPOSE 8080

# Start cAdvisor
CMD ["./cadvisor"]
